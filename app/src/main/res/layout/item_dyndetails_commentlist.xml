<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.v.rapiddev.views.CircleImageView
        android:id="@+id/iv_dyncommlist_userlogo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_dyncommlist_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="神秘人"
                android:textColor="@color/actionbar_2"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lt_dyncommlist_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dyncommlist_good"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/icon_good_common" />

                <TextView
                    android:id="@+id/tv_dyncommlist_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="3"
                    android:textColor="@color/actionbar_2" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_dyncommlist_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、加油、" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dyncommlist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dyncommlist_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="回复"
            android:textSize="12sp" />
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_dyncommlist_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gengduo"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>


    </LinearLayout>
</LinearLayout>