<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rl_good"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.v.rapiddev.views.CircleImageView
            android:id="@+id/img_good_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="武陵人"
                android:textSize="13sp"
                android:textColor="@color/actionbar"
                android:gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/img_good_good"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_good_on"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_good_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="09:42"
                android:textColor="@color/hiteTextColor"
                android:textSize="10sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/img_good_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_good_content"
            android:visibility="gone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:textSize="11sp"
            android:textColor="@color/hiteTextColor"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>