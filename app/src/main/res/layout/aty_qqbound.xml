<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/lovajobactionbar_2" />

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@mipmap/image_empty"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:background="@mipmap/icon_cellphone"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="3.5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_number_bind"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.9"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/defaultTextColor"
                android:textColorHint="@color/hiteTextColor"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/image_empty"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_code_bind"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:hint="请输入收到的验证码"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/defaultTextColor"
                android:textColorHint="@color/hiteTextColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bt_send_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@mipmap/button_send_code"
                android:enabled="false"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/image_empty"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:background="@mipmap/icon_lock"
            android:gravity="center"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_psw1_bind"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:enabled="false"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/defaultTextColor"
                android:textColorHint="@color/hiteTextColor"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/bt_commit_bind"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bt_next"
        android:enabled="false"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>
