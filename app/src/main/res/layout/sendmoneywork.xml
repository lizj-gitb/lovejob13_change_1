<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewbackground"
    android:orientation="vertical">

    <include layout="@layout/lovajobactionbar_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/lt_aty_send_money_work_slector_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_aty_send_money_work_slector_1_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|right"
                android:text="创意工作"
                android:textColor="@color/actionbar"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_aty_send_money_work_slector_1_view"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/actionbar" />
            <!--<ImageView-->
            <!--android:id="@+id/img_aty_send_money_work_slector_1_view"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@+id/tv_aty_send_money_work_slector_1_text"-->
            <!--android:layout_gravity="right"-->
            <!--android:src="@mipmap/juxing" />-->
        </RelativeLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/lt_aty_send_money_work_slector_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_aty_send_money_work_slector_2_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|left"
                android:text="兼职工作"
                android:textColor="@color/defaultTextColor"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_aty_send_money_work_slector_2_view"
                android:layout_width="60dp"
                android:visibility="invisible"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/actionbar" />
            <!--<ImageView-->
            <!--android:id="@+id/img_aty_send_money_work_slector_1_view"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@+id/tv_aty_send_money_work_slector_1_text"-->
            <!--android:layout_gravity="right"-->
            <!--android:src="@mipmap/juxing" />-->
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_aty_send_money_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>