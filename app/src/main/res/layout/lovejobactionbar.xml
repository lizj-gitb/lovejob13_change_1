<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/actionbar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/actionbar_lt_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actionbar_tv_locationtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="未定位"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/choosecity_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="4"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@mipmap/blank_01"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/actionbar_img_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.2"
                    android:src="@mipmap/search_01" />

                <EditText
                    android:id="@+id/actionbar_et_search"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:background="@null"
                    android:textColorHint="#3f6071" />

                <ImageView
                    android:id="@+id/actionbar_img_search_right"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.2"
                    android:src="@mipmap/search_01"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionbar_lt_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/actionbar_img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/more_01" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
