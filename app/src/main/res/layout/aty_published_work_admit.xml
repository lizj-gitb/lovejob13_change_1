<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor_svprogressdefaultview"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_vertical">

            <com.v.rapiddev.views.CircleImageView
                android:id="@+id/img_tobeconfirm_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_tobeconfirm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/img_tobeconfirm_icon"
                android:text="张三"
                android:textColor="@color/textColor_alert_button_cancel"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_tobeconfirm_craft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tobeconfirm_name"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="2dp"

                android:layout_toRightOf="@+id/img_tobeconfirm_icon"
                android:text="工程师"
                android:textColor="@color/hiteTextColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_commpl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tobeconfirm_craft"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/img_tobeconfirm_icon"
                android:text="爱上工作工作室"
                android:textColor="@color/hiteTextColor"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_aty_publish_workstate"
                android:layout_width="59dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="已录取"
                android:textColor="#ffa200"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="12dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_aty_published_getthisperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@mipmap/button_luqu_offer_yes" />

            <ImageView
                android:id="@+id/img_aty_published_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@mipmap/button_luqu_chat" />

            <ImageView
                android:id="@+id/img_aty_published_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@mipmap/button_luqu_call" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
