<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/actionbar"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_buytoken_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/button_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="江湖令"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="265dp"

            android:background="@color/white"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="江湖令"
                    android:textColor="@color/actionbar"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="号召江湖朋友为我招兵买马，同时还能将职位排名靠前哦！"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:text="单价"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:text="总价"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buytoken_Price1"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/danjia"
                    android:gravity="center"
                    android:text="1元/个"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/et_buytoken_count1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total1"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buytoken_Price2"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/keyigoumai"
                    android:gravity="center"
                    android:text="10元/个"
                    android:textColor="@color/actionbar" />

                <EditText
                    android:id="@+id/et_buytoken_count2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buytoken_Price3"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/keyigoumai"
                    android:gravity="center"
                    android:text="100元/个"
                    android:textColor="@color/actionbar" />

                <EditText
                    android:id="@+id/et_buytoken_count3"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total3"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buytoken_Price4"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/keyigoumai"
                    android:gravity="center"
                    android:text="1000元/个"
                    android:textColor="@color/actionbar" />

                <EditText
                    android:id="@+id/et_buytoken_count4"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total4"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buytoken_Price5"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/keyigoumai"
                    android:gravity="center"
                    android:text="10000元/个"
                    android:textColor="@color/actionbar" />

                <EditText
                    android:id="@+id/et_buytoken_count5"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total5"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="悬赏令"
                    android:textColor="@color/red"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="悬赏天下英雄，帮我招到合适的人才上班后，可获得赏金哦！（上班10天后与公司签订合同之后，才能领到赏金，若没有招到，15天之后可以随时全额退款）。"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="10sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:text="金额"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:gravity="center"
                    android:text="数量"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/defaultTextColor"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_buytoken_money"
                        android:layout_width="120dp"
                        android:layout_height="27dp"
                        android:background="@mipmap/bukegoumai"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:numeric="integer"
                        android:textColor="@color/actionbar" />

                    <TextView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="-25dp"
                        android:background="@mipmap/jine"
                        android:gravity="center"
                        android:text="元" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_buytoken_count"
                    android:layout_width="70dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/shuliang"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:numeric="integer"
                    android:textColor="@color/actionbar" />

                <TextView
                    android:id="@+id/tv_buytoken_total"
                    android:layout_width="100dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/heji"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/actionbar" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="共计："
                android:textColor="@color/actionbar"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_buytoken_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/actionbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" 元"
                android:textColor="@color/actionbar" />

            <TextView
                android:id="@+id/tv_buytoken_pay"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/fukuan"
                android:gravity="center"
                android:text="付款"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
