<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="false"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/img_clear_dynamic"
            android:layout_width="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/umeng_socialize_title_back_bt"
            android:layout_height="15dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dynamic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="昨天"
            android:textColor="@color/black"
            android:textSize="29sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_dynamic_timeday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_dynamic_timemonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="8月"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/img_dynamic_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rv_dynamic_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_dynamic_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:text="说好一起到白头，你却偷偷焗了油"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>