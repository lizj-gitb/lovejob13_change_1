<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonselector"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_mysendallworklist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="工程师"
                android:textColor="@color/textColor_alert_button_cancel"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mysendallworklist_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="￥0.00"
                android:textColor="#ffa200"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/xuxian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_worklist_date"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/icon_date" />

                <TextView
                    android:id="@+id/tv_mysendallworklist_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/img_worklist_date"
                    android:text=" 时间: 2016-10-07"
                    android:textColor="#969696"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_worklist_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:text="人已报名"
                    android:textColor="#969696"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_mysendallworklist_alreadySignInNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@+id/tv_worklist_apply"
                    android:text="4"
                    android:textColor="@color/textColor_alert_button_cancel"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/img_worklist_position"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_worklist_date"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:src="@mipmap/icon_position" />

                <TextView
                    android:id="@+id/tv_mysendallworklist_location"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_worklist_date"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/img_worklist_position"
                    android:text="地址: 雁塔区朱雀大街"
                    android:textColor="#969696"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_worklist_apply"
                    android:gravity="center">

                    <GridView
                        android:id="@+id/tv_mysendallworklist_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
